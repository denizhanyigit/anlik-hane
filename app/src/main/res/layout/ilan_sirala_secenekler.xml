<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:gravity="center"
    >

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginRight="122dp"
        android:textColor="#000"
        android:textSize="22sp"
        android:textStyle="bold"
        android:text="Sıralama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RadioGroup
        android:padding="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:layout_marginBottom="10dp"
            android:textSize="18sp"
            android:id="@+id/gelismis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:padding="5dp"
            android:text="Varsayılan" />
        <RadioButton
            android:layout_marginBottom="10dp"
            android:textSize="18sp"
            android:id="@+id/onceEnYuksek"
            android:padding="5dp"
            android:text="Fiyata göre (Önce en yüksek)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:layout_marginBottom="10dp"
            android:textSize="18sp"
            android:id="@+id/onceEnDusuk"
            android:padding="5dp"
            android:text="Fiyata göre (Önce en düşük)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:layout_marginBottom="10dp"
            android:textSize="18sp"
            android:id="@+id/onceEnYeni"
            android:padding="5dp"
            android:text="Tarihe göre (Önce en yeni ilan)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:layout_marginBottom="10dp"
            android:textSize="18sp"
            android:id="@+id/onceEnEski"
            android:padding="5dp"
            android:text="Tarihe göre (Önce en eski ilan)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RadioGroup>
    <TextView
        android:id="@+id/vazgec"
        android:textStyle="bold"
        android:textColor="#2196F3"
        android:textSize="20sp"
        android:textAlignment="viewEnd"
        android:text="VAZGEÇ"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>