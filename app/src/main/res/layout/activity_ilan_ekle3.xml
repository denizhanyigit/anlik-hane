<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".IlanEkleActivity3">

    <LinearLayout
        android:layout_margin="10dp"
        android:backgroundTint="#fff"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="İL"
            android:textColor="#2196F3"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Spinner
            android:padding="10dp"
            android:background="@drawable/dropdown"
            android:id="@+id/ilSpinner"
            android:textColor="#000"
            android:textSize="40sp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:text="İLÇE"
            android:textColor="#2196F3"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Spinner
            android:padding="10dp"
            android:background="@drawable/dropdown"
            android:id="@+id/ilceSpinner"
            android:textColor="#000"
            android:textSize="40sp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:text="MAHALLE"
            android:textColor="#2196F3"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/txtMahalle"
            style="@style/sEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:cursorVisible="true"
            android:hint="Mahalle"
            android:textColor="#000"
            android:textCursorDrawable="@null" />
        <TextView
            android:text="SİTE İÇERİSİNDE Mİ ?"
            android:textColor="#2196F3"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioGroup
                android:id="@+id/siteRadioGroup"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/siteEvet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:checked="true"
                    android:text="Evet"
                    android:textSize="17sp" />
        <RadioButton
            android:textSize="17sp"
            android:layout_marginLeft="15dp"
            android:id="@+id/siteHayir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hayır"/>
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="30dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:gravity="center"
                android:backgroundTint="#2196F3"
                android:textStyle="bold"
                android:textColor="#fff"
                android:id="@+id/btnGeri"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/butndesign"
                android:text="GERİ" />

            <TextView
                android:gravity="center"
                android:id="@+id/btnIleri"
                android:backgroundTint="#2196F3"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/butndesign"
                android:text="YAYINLA" />

        </LinearLayout>

    </LinearLayout>
    </LinearLayout>

