    <solid android:color="#F0F2F7"/>
    <!--  Bu satırlar nesnenizin kenarlarını çizmenize olanak sağlar -->
  <stroke
      android:width="1dp"
      android:color="#dcdcdc"
      />
    <!--  Bu satırlar ise nesnenizin kenarlarını yumuşatır. -->
